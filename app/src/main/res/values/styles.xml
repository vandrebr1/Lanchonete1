<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:actionBarItemBackground">@drawable/menu_item</item>
        <item name="actionBarItemBackground">@drawable/menu_item</item>
    </style>

    <style name="largeText">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Texto">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/preto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BotaoIcone">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/botao_icone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="Botao">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/botao_icone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BotaoIconeTexto">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/botao_background</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText"></style>

    <style name="IconesItensLinha">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:width">35dp</item>
        <item name="android:textColor">#7599BF</item>
        <item name="android:text">@string/hifen</item>
    </style>


    <style name="TextoGridDestaque">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tvTextoGridDestaque</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_minima</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextoGrid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_minima</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin_minima</item>
    </style>

    <style name="IconesGrid">
        <item name="android:layout_width">16sp</item>
        <item name="android:layout_height">16sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/tvIconeFundo</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">16sp</item>
    </style>

</resources>
