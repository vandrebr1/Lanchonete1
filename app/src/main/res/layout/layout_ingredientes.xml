<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textura4"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ingredientes_rcvIngredientes"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="@dimen/activity_horizontal_margin_minima"
        android:background="@color/transparencia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin_minima"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredientes_lblTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:text="@string/ingrediente_lbltotal"
            android:textColor="@color/preto"
            />

        <TextView
            android:id="@+id/ingredientes_tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:text="@string/ingrediente_total"
            android:textColor="@color/preto" />
    </LinearLayout>

    <ListView
        android:id="@+id/ingredientes_lvIngredientesAdicionado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin_minima"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:focusable="true"
        android:scrollbars="none" />

</LinearLayout>