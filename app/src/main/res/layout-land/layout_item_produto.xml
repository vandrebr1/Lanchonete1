<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparencia">

    <br.com.vandre.lanchonete.util.DynamicImageView
        android:id="@+id/itemproduto_ivFoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemproduto_tvProduto"
        android:minHeight="200dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/itemproduto_btnQueroEste"
        style="@style/Botao"
        android:layout_width="wrap_content"
        android:background="@color/vermelho"
        android:focusable="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/itemproduto_queroeste"
        android:textColor="@color/branco"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemproduto_tvProduto"
        style="@style/Texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/itemproduto_btnQueroEste"
        android:text="PRODUTO 1"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemproduto_tvPreco"
        style="@style/Texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemproduto_tvProduto"
        android:background="@android:color/black"
        android:paddingBottom="@dimen/activity_horizontal_margin_minima"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="@dimen/activity_horizontal_margin_minima"
        android:text="R$ 999,99"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/itemproduto_btnEditarIngredientes"
        style="@style/BotaoIcone"
        android:layout_alignBaseline="@+id/itemproduto_ivFoto"
        android:layout_alignBottom="@+id/itemproduto_ivFoto"
        android:layout_centerHorizontal="true"
        android:background="@color/vermelho"
        android:focusable="false"
        android:text="@string/itemproduto_editaringredientes"
        android:textColor="@color/branco" />

    <TextView
        android:id="@+id/itemproduto_tvInformacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemproduto_btnEditarIngredientes"
        android:layout_margin="@dimen/activity_horizontal_margin_minima"
        android:textSize="20sp"
        android:visibility="visible" />

</RelativeLayout>