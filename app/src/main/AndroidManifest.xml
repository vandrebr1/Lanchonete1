<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vandre.lanchonete">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.LanchoneteAplicacao"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

        </activity>

        <activity
            android:name=".atividades.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".atividades.CardapioActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_cardapio"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name=".atividades.ConfiguracoesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_configuracoes"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".atividades.PedidoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_pedido"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name=".atividades.MonteSeuLancheActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_pedido"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>